<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <title>Список Приложений</title>


</head>
<body>
    <style>
        body {
            padding-top: 50px;
        }

        .navbar-template {
            padding: 40px 15px;
        }
    </style>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("KodiSoft", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div><!--/.nav-collapse -->
        </div>
    </div>


    <div class="container">
        <header>
            <a href="@Url.Action("Index","User")"><img width="150" height="150" style="border-radius:100%; margin-top:45px;" src="/Content/logo.png" / ></a>
        </header>

        <ul id="success" hidden style="color:green;"></ul>
        <ul id="errors" hidden style="color:red;"></ul>


    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>



    @RenderSection("scripts", required: false)
</body>
</html>
